
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        messagesPack="com.leto.server.web.restorepassword"
        class="com.leto.server.web.restorepassword.RestorePasswordScreen">
    <dialogMode width="AUTO"/>
    <layout spacing="true">
        <label id="warningLabel" icon="font-icon:WARNING" visible="false" value="msg://warning"/>
        <textField id="loginField" width="300px" caption="msg://login" required="true" requiredMessage="msg://loginMessage"/>
        <hbox align="MIDDLE_CENTER" colspan="2" spacing="true">
            <button id="okBtn" align="TOP_RIGHT" caption="msg://okBtnCaption" invoke="onSendPasswordBtnClick"/>
            <button id="cancelBtn" caption="msg://cancelBtnCaption" invoke="onCancelBtnClick"/>
        </hbox>
    </layout>
</window>