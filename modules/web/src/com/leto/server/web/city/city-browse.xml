<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="citysTable"
        messagesPack="com.leto.server.web.city">
    <data readOnly="true">
        <collection id="citysDc"
                         class="com.leto.server.entity.City"
                         view="_local">
            <loader id="citysDl">
                <query>
                    <![CDATA[select e from leto$City e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="citysTable"
            spacing="true">
        <filter id="filter"
                applyTo="citysTable"
                dataLoader="citysDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="citysTable"
                    width="100%"
                    dataContainer="citysDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="citysTable.create"/>
                <button id="editBtn"
                        action="citysTable.edit"/>
                <button id="removeBtn"
                        action="citysTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
