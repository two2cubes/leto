
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.leto.server.web.register.RegisterScreen"
        caption="msg://caption"
        messagesPack="com.leto.server.web.register">
    <dialogMode width="400" />
    <layout>
        <grid align="MIDDLE_CENTER" spacing="true">
            <columns count="2"/>
            <rows>
                <row>
                    <label value="msg://loginCaption"/>
                </row>
                <row>
                    <textField id="loginField" required="true"/>
                </row>
                <row>
                    <label value="msg://emailCaption"/>
                </row>
                <row>
                    <textField id="emailField" required="true"/>
                </row>
                <row>
                    <label value="msg://passwordCaption"/>
                </row>
                <row>
                    <passwordField id="passwordField" required="true"/>
                </row>
                <row>
                    <hbox align="MIDDLE_CENTER" colspan="2" spacing="true">
                        <button id="okBtn" align="TOP_RIGHT" caption="msg://okCaption" invoke="onOkBtnClick"/>
                        <button id="cancelBtn" caption="msg://cancelCaption" invoke="onCancelBtnClick"/>
                    </hbox>
                </row>
            </rows>
        </grid>
    </layout>
</window>